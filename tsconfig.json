{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "noLib": false,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": [
      "src/**/*",
      "src/*"
    ],
    "exclude": [
      "node_modules"
    ]
}